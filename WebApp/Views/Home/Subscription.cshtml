@model WebApp.Models.ViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>On Demand Demo</h1>
    <p class="lead">Select subscription.</p>
    @using (Html.BeginForm("SelectSubscription", "Home"))
    {
        <div class="input-group" style="width:330px">
            <input name="subscriptionId" type="text" class="form-control" placeholder="Enter your Azure subscription id">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">Connect</button>
                <input class="btn btn-primary" type="hidden" name="sessionId" value="@ViewBag.sessionId"></input>
            </span>
        </div>
    }
</div>

