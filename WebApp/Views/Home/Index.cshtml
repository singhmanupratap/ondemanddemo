@model WebApp.Models.SolutionsViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>On Demand Demo</h1>
    <p class="lead">Select Solution.</p>
    @if (Model != null)
    {
        <h4>Your Subscriptions</h4>
        <div class="row">
            <table class="table table-striped table-condensed table-hover">
                <tr>
                    <td>
                        <h5>Solution</h5>
                    </td>
                    <td>
                        <h5>Action</h5>
                    </td>
                </tr>
                @foreach (var solution in Model.Solutions)
                {
                    <tr>
                        <td>
                            @solution.Name
                        </td>
                        <td>
                            @Html.ActionLink(
                                              "Select",
                                              "SelectSolution",
                                              "Home",
                                              new
                                              {
                                                  solutionId = @solution.RowKey
                                              },
                                              new
                                              {
                                                  @class = "btn btn-danger btn-xs"
                                              }
                                           )
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</div>

